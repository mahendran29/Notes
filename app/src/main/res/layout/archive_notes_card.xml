<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        android:id="@+id/archivenotecard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/archivenoteTitle"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp"
                    android:text="Developer"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/archivenoteTitle"
                    android:id="@+id/archiveTimecalendar"
                    android:textColor="@color/black"
                    android:paddingBottom="8dp"
                    android:text="Time"
                    android:paddingLeft="20dp"/>

            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/archiverestore"
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_baseline_restore_from_trash_24"/>




    </androidx.cardview.widget.CardView>

</RelativeLayout>